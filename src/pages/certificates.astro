---

<Layout
  title="Certificates"
  description="Collection of my certificates, awards, and recognitions from various courses and accomplishments."
  url="https://side.my.id/certificates"
>
  <div
    class:list={[
      "flex w-full flex-col items-start justify-start",
      "md:text-start",
    ]}
  >
    <section class="w-full">
      <h1 data-cy="heading" class="mb-0">./certificates</h1>
      <div class="slide-enter-content">
        <p data-cy="description" class="mb-0 text-justify">
          Collection of my certificates, awards, and recognitions from various courses and accomplishments.
        </p>
      </div>
    </section>
    <section
      data-cy="certificates-list"
      class="mt-8 grid w-full grid-cols-1 grid-rows-1 gap-6 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 slide-enter-content"
    >
      {
        certificates.map((certificate) => (
          <div class="certificate-item flex flex-col">
            <div class="aspect-[4/3] flex items-center justify-center overflow-hidden border border-monochrome-3 rounded-md bg-gray-100">
              <Image
                width={800}
                height={600}
                quality={90}
                draggable={false}
                format="webp"
                src={certificate.url}
                alt={certificate.title}
                class="w-full h-auto object-contain transition-transform duration-300 hover:scale-105"
              />
            </div>
            <p class="mt-2 text-sm text-center text-monochrome-5">{certificate.title}</p>
          </div>
        ))
      }
    </section>
  </div>
</Layout>
