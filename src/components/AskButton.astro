---
import { MessageSquareIcon } from "lucide-svelte";
---

<a
  href="https://ask.side.my.id/"
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Ask AI Assistant"
  class="fixed bottom-6 right-6 z-50 flex h-14 w-14 items-center justify-center rounded-full bg-monochrome-3 text-base-0 shadow-lg hover:bg-monochrome-2 transition-all duration-300 hover:scale-110"
>
  <MessageSquareIcon size={24} />
  <span class="bubble-hint absolute -top-10 whitespace-nowrap rounded-md bg-monochrome-2 py-1 px-3 text-sm font-medium opacity-0 transition-opacity duration-300">
    Ask me anything
  </span>
</a>

<style>
  a:hover .bubble-hint {
    opacity: 1;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.2);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(0, 0, 0, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(0, 0, 0, 0);
    }
  }

  a {
    animation: pulse 2s infinite;
  }
</style>
